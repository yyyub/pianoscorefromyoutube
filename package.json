{
  "name": "youtube-piano-sheets",
  "version": "1.0.0",
  "description": "Convert YouTube videos to Piano Sheet Music using AI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "youtube",
    "piano",
    "sheet-music",
    "ai",
    "transcription"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@spotify/basic-pitch": "^1.0.1",
    "canvas": "^3.2.1",
    "electron": "^40.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.3",
    "puppeteer": "^24.36.1",
    "sanitize-filename": "^1.6.3",
    "uuid": "^13.0.0",
    "vexflow": "^5.0.0",
    "yt-dlp-wrap": "^2.3.12"
  },
  "devDependencies": {
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.youtubepianosheet.app",
    "productName": "YouTube Piano Sheets",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}
